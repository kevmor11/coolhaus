      </div>
      <script type="text/javascript">
        $(document).ready(function(){
          $('.buildable-slider').slick({
            arrows: true,
            slidesToShow: 1,
            infinite: true,
            prevArrow: $('.prev'),
            nextArrow: $('.next')
          });
        });
      </script>
      <link rel="stylesheet" type="text/css" href="http://kenwheeler.github.io/slick/slick/slick-theme.css"/>
    </section>
  {% endif %}
{% endfor %}

