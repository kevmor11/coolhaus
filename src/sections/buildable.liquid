{% for block in section.blocks %}
  {% if block.type == 'hero' %}
    <section class="page-hero">
      <img class="w-100 hide-mobile" src="{{ block.settings.hero-img | img_url: '2000x' }}">
      <img class="w-100 hide-desktop" src="{{ block.settings.hero-img-xs | img_url: '800x' }}">

      <div class="blocker"></div>

      <div class="text-container flex-container">
        <div>
          <h1 class="title">{{ block.settings.title }}</h1>
        </div>
      </div>
    </section>
  {% elsif block.type == 'image-with-text' %}
    <section class="image-with-text">
      <div class="wrapper">
        <div class="column">
          <div class="flex-container-left-align">
            <div>
              <h3 class="title">{{ block.settings.title-1 }}</h3>
              <div class="desc">{{ block.settings.desc-1 }}</div>
              <a class="button button--primary" href="{{ block.settings.button-url }}">{{ block.settings.button-text }}</a>
            </div>
          </div>
        </div>
        <div class="column">
          <img class="w-100" src="{{ block.settings.img-1 | img_url: '800x' }}">
        </div>
      </div>
    </section>
  {% elsif block.type == 'text-block' %}
    <section class="about-text-section text-center">
      <div class="text-container">
        {% if block.settings.text-subtitle %}
          <p class="subheading-text">{{ block.settings.text-subtitle }}</p>
        {% endif %}
        <h2>{{ block.settings.text-title }}</h2>
        <p style="margin-bottom: 25px;">{{ block.settings.text-desc }}</p>
        <a class="button button--primary" href="{{ block.settings.text-cta-url }}">{{ block.settings.text-cta-text }}</a>
      </div>
    </section>
  {% elsif block.type == 'text-2-columns' %}
    <section class="image-with-text text">
      <div class="wrapper">
        <h2 class="title">{{ block.settings.two-title }}</h2>
        <div class="column">
          <div class="desc">{{ block.settings.two-desc-1 }}</div>
        </div>
        <div class="column">
          <div class="desc">{{ block.settings.two-desc-2 }}</div>
        </div>
      </div>
    </section>
  {% elsif block.type == 'two-images' %}
    <section class="two-images">
      <div class="wrapper">
        <div class="column">
          <img class="w-100" src="{{ block.settings.img-3 | img_url: '1000x' }}">
        </div>
        <div class="column text-right">
          <img class="w-100" src="{{ block.settings.img-4 | img_url: '1000x' }}">
        </div>
      </div>
    </section>
  {% elsif block.type == 'image-full' %}
    <img class="w-100" src="{{ block.settings.image-full | img_url: '2000x' }}">
  {% elsif block.type == 'slideshow' %}
    <section class="buildable-slideshow">
      <div class="buildable-slider {{ block.settings.slide_height }}">
        {% if block.settings.slider-image-1 %}
          <div class="slider">
            <img src="{{ block.settings.slider-image-1 | img_url: '2000x' }}">
            <div class="text-container">
              <h2 data-animation="moPopUp" data-animation-delay="250" class="title slide-content__heading">{{ block.settings.slider-title-1 }}</h2>
              {% if block.settings.slider-button-text-1 %}
                <a class="button button--primary" href="{{ block.settings.slider-button-url-1 }}">{{ block.settings.slider-button-text-1 }}</a>
              {% endif %}
            </div>
          </div>
        {% endif %}
        {% if block.settings.slider-image-2 %}
          <div class="slider">
            <img src="{{ block.settings.slider-image-2 | img_url: '2000x' }}">
            <div class="text-container">
              <h2 class="title slide-content__heading">{{ block.settings.slider-title-2 }}</h2>
              {% if block.settings.slider-button-text-2 %}
                <a class="button button--primary" href="{{ block.settings.slider-button-url-2 }}">{{ block.settings.slider-button-text-2 }}</a>
              {% endif %}
            </div>
          </div>
        {% endif %}
        {% if block.settings.slider-image-3 %}
          <div class="slider">
            <img src="{{ block.settings.slider-image-3 | img_url: '2000x' }}">
            <div class="text-container">
              <h2 class="title slide-content__heading">{{ block.settings.slider-title-3 }}</h2>
              {% if block.settings.slider-button-text-3 %}
                <a class="button button--primary" href="{{ block.settings.slider-button-url-3 }}">{{ block.settings.slider-button-text-3 }}</a>
              {% endif %}
            </div>
          </div>
        {% endif %}
        {% if block.settings.slider-image-4 %}
          <div class="slider">
            <img src="{{ block.settings.slider-image-4 | img_url: '2000x' }}">
            <div class="text-container">
              <h2 class="title slide-content__heading">{{ block.settings.slider-title-4 }}</h2>
              {% if block.settings.slider-button-text-4 %}
                <a class="button button--primary" href="{{ block.settings.slider-button-url-4 }}">{{ block.settings.slider-button-text-4 }}</a>
              {% endif %}
            </div>
          </div>
        {% endif %}
        {% if block.settings.slider-image-5 %}
          <div class="slider">
            <img src="{{ block.settings.slider-image-5 | img_url: '2000x' }}">
            <div class="text-container">
              <h2 class="title slide-content__heading">{{ block.settings.slider-title-5 }}</h2>
              {% if block.settings.slider-button-text-5 %}
