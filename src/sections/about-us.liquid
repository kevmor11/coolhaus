<section class="page-hero">
  <img class="w-100 hide-mobile" src="{{ section.settings.hero-img | img_url: '2000x' }}">
  <img class="w-100 hide-desktop" src="{{ section.settings.hero-img-xs | img_url: '800x' }}">

  <div class="blocker"></div>

  <div class="text-container flex-container">
    <div>
      <h1 class="title">{{ section.settings.title }}</h1>
    </div>
  </div>
</section>

<section class="about-text-section text-center">
	<div class="text-container">
		<p class="subheading-text">{{ section.settings.tb-subtitle }}</p>
		<h2>{{ section.settings.tb-title }}</h2>
		<p>{{ section.settings.tb-desc }}</p>
	</div>
</section>

<section class="image-with-text small-flip">
  <div class="wrapper">
    <div class="column small-second">
      <div class="flex-container-left-align pb-0">
        <div>
          <h2 class="title">{{ section.settings.title-1 }}</h2>
          <div class="desc">{{ section.settings.desc-1 }}</div>
        </div>
      </div>
    </div>
    <div class="column small-first">
      <img class="w-100" src="{{ section.settings.img-1 | img_url: '800x' }}">
    </div>
  </div>
</section>

{% if section.settings.img-full %}
	<img class="w-100" src="{{ section.settings.img-full | img_url: '2000x' }}">
{% endif %}

<section class="image-with-text small-flip">
  <div class="wrapper">
    <div class="column small-second">
      <img class="w-100" src="{{ section.settings.img-2 | img_url: '1000x' }}">
    </div>
    <div class="column small-first">
      <div class="flex-container-left-align">
        <div>
          <h2 class="title">{{ section.settings.title-2 }}</h2>
          <div class="desc">{{ section.settings.desc-2 }}</div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="image-with-text text">
  <div class="wrapper">
		<h2 class="title">{{ section.settings.title-3 }}</h2>
    <div class="column">
			<div class="desc">{{ section.settings.desc-3 }}</div>
    </div>
		<div class="column">
			<div class="desc">{{ section.settings.desc-4 }}</div>
    </div>
  </div>
</section>

<section class="two-images">
	<div class="wrapper">
    <div class="column">
      <img class="w-100" src="{{ section.settings.img-3 | img_url: '1000x' }}">
    </div>
		<div class="column text-right">
      <img class="w-100" src="{{ section.settings.img-4 | img_url: '1000x' }}">
    </div>
	</div>
</section>

