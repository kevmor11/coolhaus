{% comment %} This script allows View Tech Specs anchor buttons to scroll smoothly down the page when they are clicked {% endcomment %}
<script>
  $(document).ready(function(){
    $('a[href^="#"]').on('click',function (e) {
        e.preventDefault();

        var target = this.hash;
        var $target = $(target);

        setTimeout(() => {
          $('html, body').stop().animate({
              'scrollTop': $target.offset().top - 60
          }, 500, 'swing');
        }, 10);
    });
  });
</script>